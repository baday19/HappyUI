.ha-user{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  height: 110rpx;
}

.avatar{
  height: 110rpx;
  width: 110rpx;
  background-color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  overflow: hidden;
}
.info{
  margin: 10rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.nickname{
  font-size: 36rpx;
  font-weight: bold;
  color: var(--ha0Text);
}
.welcome{
  /* color: var(--ha2Text); */
  color: white;
  font-size: 28rpx;
}